<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#c6c6c6"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardElevation="5dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="5dp"
        card_view:contentPaddingTop="5dp"
        card_view:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person_black_24dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/usernameinrv"
                        android:text="USERNAME"
                        android:gravity="bottom"
                        android:textSize="14dp"
                        android:textColor="#007ea1"
                        android:layout_height="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/mailinrv"
                        android:text="Gmail"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#027fa2"
                        android:layout_height="20dp"
                        android:layout_gravity="center"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/timeanddate"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#eaeaea"
                android:layout_marginBottom="3dp">
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#000"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="5dp"
                android:text="JSon Image Name"
                android:id="@+id/ImageNameTextView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:layout_marginTop="4dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/like"
                    android:gravity="center"
                    android:src="@drawable/ic_thumb_up_black_24dp_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:id="@+id/likescount"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#029fca"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#dfdfdf"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Share"
                    android:textSize="16dp"
                    android:id="@+id/share"
                    android:gravity="center"
                    android:textColor="#029fca"
                    android:layout_height="match_parent" />

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>